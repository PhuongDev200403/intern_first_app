<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
  version="5.0">


<listener>
    <listener-class>com.phuong_coi.english.util.ObjectifyInitListener</listener-class>
  </listener>

  <!-- Filter để tạo Objectify context cho mọi request -->
  <filter>
    <filter-name>ObjectifyFilter</filter-name>
    <filter-class>com.phuong_coi.english.util.ObjectifyJakartaFilter</filter-class>
  </filter>
  
  <filter-mapping>
    <filter-name>ObjectifyFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

	<!-- Servlets -->

  <servlet>
    <servlet-name>usersServlet</servlet-name>
    <servlet-class>com.phuong_coi.english.servlet.UserServiceImpl</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>usersServlet</servlet-name>
    <url-pattern>/users</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>employeeServlet</servlet-name>
    <servlet-class>com.phuong_coi.english.servlet.EmployeeServiceImpl</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>employeeServlet</servlet-name>
    <url-pattern>/employee</url-pattern>
  </servlet-mapping>

<servlet>
  <servlet-name>authServlet</servlet-name>
  <servlet-class>com.phuong_coi.english.servlet.AuthServiceImpl</servlet-class>
</servlet>

<servlet-mapping>
  <servlet-name>authServlet</servlet-name>
  <url-pattern>/auth</url-pattern>
</servlet-mapping>
  
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>com.phuong_coi.english.servlet.GreetingServiceImpl</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/greet</url-pattern>
  </servlet-mapping>

	<!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

</web-app>
