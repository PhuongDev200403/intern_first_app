<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:basic="urn:import:com.phuong_coi.english.view">
    <ui:style>
        .main-content{
            display: flex;
            flex-direction: column;
            align-items: center !important;
            justify-content: center !important;
        }
        .btn-add{
            background-color: #4CAF50 !important;
            color: black;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            width: 200px;
            margin-bottom: 10px;
        }
        .btn-view{
            background-color: #4CAF50 !important;
            color: black;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            width:400px;
        }

    </ui:style>
    <g:HTMLPanel>
        <basic:Header ui:field="header"></basic:Header>
        <!-- trong HTML panel này sẽ chứa tất cả các place khác -->
        <ui:HTMLPanel ui:field="mainContent" addStyleNames="{style.main-content}">
            <g:Button ui:field="btnAdd" addStyleNames="{style.btn-add}">Thêm mới</g:Button>
            <br></br>
            <g:Button ui:field="btnView" addStyleNames="{style.btn-view}">Danh sách nhân viên</g:Button>
        </ui:HTMLPanel>
        <basic:Footer ui:field="footer"></basic:Footer>
    </g:HTMLPanel>
</ui:UiBinder>