<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:dp="urn:import:com.google.gwt.user.datepicker.client">

    <ui:style>
        .popupContent {
            background: white;
            border-radius: 12px;
            padding: 30px;
            min-width: 420px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }
        .row-spacing{
            height: 48px;     
            vertical-align: middle;
        }
        .title {
            text-align: center;
            font-weight: bold;
            font-size: 22px;
            margin-bottom: 25px;
            color: #2c3e50;
        }
        .label {
            font-weight: bold;
            color: #34495e;
            padding-right: 15px;
            width: 140px;
        }
        .button{
            border-radius: 5px;
        }
    </ui:style>

    <g:VerticalPanel spacing="15" horizontalAlignment="ALIGN_CENTER">
        <g:HTMLPanel>
            <div class="{style.popupContent}">
                <div class="{style.title}">Chi tiết nhân viên</div>

                <table cellspacing="15" width="100%">
                    <tr class="{style.row-spacing}">
                        <td class="{style.label}">Họ tên:</td>
                        <td><g:TextBox ui:field="txtFullName" width="100%" addStyleNames="form-control"/></td>
                    </tr>
                    <tr class="{style.row-spacing}">
                        <td class="{style.label}">Số điện thoại:</td>
                        <td><g:TextBox ui:field="txtSoDienThoai" width="100%" addStyleNames="form-control"/></td>
                    </tr>
                    <tr class="{style.row-spacing}">
                        <td class="{style.label}">Phòng ban:</td>
                        <td><g:ListBox ui:field="lbDepartment" width="100%" addStyleNames="form-select"/></td>
                    </tr>
                    <tr class="{style.row-spacing}">
                        <td class="{style.label}">Chức vụ:</td>
                        <td><g:ListBox ui:field="lbRole" width="100%" addStyleNames="form-select"/></td>
                    </tr>
                    <tr class="{style.row-spacing}">
                        <td class="{style.label}">Ngày vào:</td>
                        <td><dp:DateBox ui:field="dateBox" width="100%" addStyleNames="form-control"/></td>
                    </tr>
                    <tr class="{style.row-spacing}">
                        <td>
                            <g:Button ui:field="btnUpdate" text="Sửa" addStyleNames="btn btn-secondary px-5 text-primary {style.button}"></g:Button>
                        </td>
                        <td>
                            <g:Button ui:field="btnClose" text="Đóng" addStyleNames="btn btn-secondary px-5 text-primary {style.button}"/>
                        </td>
                    </tr>
                </table>
            </div>
        </g:HTMLPanel>
    </g:VerticalPanel>
</ui:UiBinder>
