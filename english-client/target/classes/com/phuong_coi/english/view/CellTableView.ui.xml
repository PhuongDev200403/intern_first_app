            border: 2px dashed #adb5bd;
            border-radius: 20px;
            padding: 50px 30px;
            text-align: center;
            color: #495057;
        }

        .emptyIcon { font-size: 80px; margin-bottom: 24px; opacity: 0.8; animation: float 4s ease-in-out infinite; }
        @keyframes float { 0%,100% { transform: translateY(0); } 50% { transform: translateY(-10px); } }
        .emptyTitle { font-size: 28px; font-weight: 700; margin-bottom: 16px; color: #212529; }
        .emptyText { font-size: 17px; line-height: 1.7; color: #6c757d; margin-bottom: 30px; max-width: 500px; }
