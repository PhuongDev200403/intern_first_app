        .formSelect {
            min-width: 180px;
            padding: 10px 14px;
            border-radius: 8px;
            border: 1px solid #ced4da;
        }

        .fullWidthTable {
            width: 100% !important;
            background-color: #ffffff;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
